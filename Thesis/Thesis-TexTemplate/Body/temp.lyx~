\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\frac{W(|S\rangle\rightarrow|S^{'}\rangle)}{W(|S^{'}\rangle\rightarrow|S\rangle)} & = & \frac{(N_{c}/N)P_{int}P_{ext}}{(N_{c}/N)P_{int}^{'}P_{ext}}\prod_{\langle i,j\rangle\in\partial c}\frac{1-P(R(\overrightarrow{r})S_{i},S_{j})}{1-P(R(\overrightarrow{r})S_{i}^{'},S_{j})}\\
 & = & exp\{\sum_{\langle i,j\rangle\in\partial c}(min\{0,-2\beta(\overrightarrow{r}\cdot S_{i})(\overrightarrow{r}\cdot S_{j})\}-min\{0,2\beta(\overrightarrow{r}\cdot S_{i})(\overrightarrow{r}\cdot S_{j})\})\}\\
 & = & exp\{\sum_{\langle i,j\rangle\in\partial c}-2\beta(\overrightarrow{r}\cdot S_{i})(\overrightarrow{r}\cdot S_{j})\}\\
 & = & exp\{\beta\sum_{\langle i,j\rangle\in\partial c}S_{i}\cdot[R(\overrightarrow{r})-1]S_{j}\}\\
 & = & exp\{\beta\sum_{\langle i,j\rangle}(S_{i}^{'}\cdot S_{j}-S_{i}\cdot S_{j})\}
\end{eqnarray*}

