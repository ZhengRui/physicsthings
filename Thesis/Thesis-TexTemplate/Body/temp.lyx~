\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
W(S)T(S & \rightarrow & S^{'})=W(S)\sum_{G}T(S\rightarrow(S,G))T((S,G)\rightarrow(S^{'},G))\nonumber \\
 & = & \sum_{G}W(S)\frac{W(S,G)}{W(S)}T((S,G)\rightarrow(S^{'},G))\nonumber \\
 & = & \sum_{G}W(S^{'})\frac{W(S^{'},G)}{W(S^{'})}T((S^{'},G)\rightarrow(S,G))\nonumber \\
 & = & W(S^{'})T(S^{'}\rightarrow S)
\end{eqnarray}

