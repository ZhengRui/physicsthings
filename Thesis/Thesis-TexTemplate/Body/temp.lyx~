\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
R(\overrightarrow{r})^{2} & = & 1\\
{}[R(\overrightarrow{r})S_{i}]\cdot[R(\overrightarrow{r})S_{j}] & = & S_{i}\cdot S_{j}\\
S_{i}\cdot[1-R(\overrightarrow{r})]S_{j} & = & 2(\overrightarrow{r}\cdot S_{i})(\overrightarrow{r}\cdot S_{j})
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
p(S_{i}^{new},S_{j}) & = & 1-exp\{min[0,\beta S_{i}^{new}\cdot[1-R(\overrightarrow{r})]S_{j}]\}\\
 & = & 1-exp\{min[0,2\beta(\overrightarrow{r}\cdot S_{i}^{new})(\overrightarrow{r}\cdot S_{j})]\}
\end{eqnarray}

\end_inset


